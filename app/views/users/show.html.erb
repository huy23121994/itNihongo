<% provide(:title, @user.username) %>

<% content_for :front_end_main do %>

	<% if flash.alert %>
		<br>
  		<div class="alert alert-block alert-info">
  			<%= flash.alert %>
    		<button type="button" class="close" data-dismiss="alert">Ã—
  		</div>
	<% end %>

	<%= render 'users/nav' %>
	
	<div class="col-sm-9" id="user_main_content">
		<div class="row">
			<div class="col-sm-2 col-sm-offset-1">
				<center class="form-group img_preview">
			    	<div class="img">
					    <img id="avatar_photo" src="<%= @user.avatar.url %>" class="full_width book_img img-thumbnail">
			        </div>
				</center>
			</div>
			<div class="col-sm-7 col-sm-offset-0">
			    <% if @user.id == current_user.id %>
			        <div>
    			        <label class="col-sm-4">User name</label>
    			        <div class="col-sm-8">
    				        <p><%= @user.username %></p>
    				    </div>
			        </div>
			    <% end %>
		        <div>
			        <label class="col-sm-4">Email</label>
			        <div class="col-sm-8">
				        <p><%= @user.email %></p>
				    </div>
		        </div>
		        <% if @user.fullname != '' && !@user.fullname.nil? %>
    		        <div>
    			        <label class="col-sm-4">Full name</label>
    			        <div class="col-sm-8">
    				        <p><%= @user.fullname %></p>
    				    </div>
    		        </div>
		        <% end %>
		        <% if @user.address != '' && !@user.address.nil? %>
    		        <div>
    			        <label class="col-sm-4">Address</label>
    			        <div class="col-sm-8">
    				        <p><%= @user.address %></p>
    				    </div>
    		        </div>
		        <% end %>
			  	<% if @user.id == current_user.id %>
    			  	<div class="form-group">
    			    	<div class="col-sm-3">
    			      		<a href="<%= edit_user_path(current_user.username) %>" class="btn btn-primary" style="background-color:#05b2e9;border-color:#05b2e9"><i class="fa fa-edit"></i> Edit</a>
    			    	</div>
    			  	</div>
			  	<% end %>
			</div>
		</div>
	</div>
<% end %>

<% extends_layout "front_end/layouts/master" %>